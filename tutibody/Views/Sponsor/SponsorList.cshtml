@model List<Sponsor>

@{
    ViewData["Title"] = "SponsorList";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sponsorluklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sponsor Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sponsorluklar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>

                                    <th scope="col">Başlık</th>
                                    <th scope="col">Resim URL</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Sponsor/DeleteSponsor/@item.SponsorId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Sponsor/UpdateSponsor/@item.SponsorId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Sponsor/CreateSponsor/" class="btn btn-primary">Yeni Sponsor Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

