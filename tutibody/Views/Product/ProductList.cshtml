@model List<Product>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürünler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Deneyimler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>

                                    <th scope="col">Başlık</th>
                                    <th scope="col">Özellik1</th>
                                    <th scope="col">Özellik2</th>
                                    <th scope="col">Özellik3</th>
                                    <th scope="col">Özellik4</th>
                                    <th scope="col">Özellik5</th>
                                    <th scope="col">Özellik6</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Title</td>
                                        <td>@item.Feature1</td>
                                        <td>@item.Feature2</td>
                                        <td>@item.Feature3</td>
                                        <td>@item.Feature4</td>
                                        <td>@item.Feature5</td>
                                        <td>@item.Feature6</td>
                                        <td>@item.Price</td>

                                        <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

