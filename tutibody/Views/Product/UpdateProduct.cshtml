@model Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="ProductId" />

                            <label> Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label> Özellik1</label>
                            <input type="text" asp-for="Feature1" class="form-control" />
                            <br />
                            <label> Özellik2</label>
                            <input type="text" asp-for="Feature2" class="form-control" />
                            <br />
                            <label> Özellik3</label>
                            <input type="text" asp-for="Feature3" class="form-control" />
                            <br />
                            <label> Özellik4</label>
                            <input type="text" asp-for="Feature4" class="form-control" />
                            <br />
                            <label> Özellik5</label>
                            <input type="text" asp-for="Feature5" class="form-control" />
                            <br />
                            <label> Özellik6</label>
                            <input type="text" asp-for="Feature6" class="form-control" />
                            <br />
                            <label>Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br />
                            <button class="btn btn-warning">Ürünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


